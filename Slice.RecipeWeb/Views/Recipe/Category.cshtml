@using Slice.Web.Models
@using Slice.Core
@model CategoryPageViewModel

<h1>@Model.PageTitle</h1>

<div class="zoneContainer">
    <ul class="cardview nonestyle infinite-scroll">
        @Html.Partial("_SubjectsCardView", Model.Items)
    </ul>
    @if (Model.PaginationViewModel != null && !Model.PaginationViewModel.IsSuppressed)
    {
        Html.RenderPartial("_Pagination", Model.PaginationViewModel);
    }
</div>

@section RightRail {
    @Html.Partial("_AdUnit", Model.AdUnits[1])
    @Html.Partial("_AdUnit", Model.AdUnits[2])
}
