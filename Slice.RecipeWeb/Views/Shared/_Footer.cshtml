@using Slice.Web.Models
@model FooterViewModel
<section class="footerContainer">
  @foreach (MenuViewModel menu in Model.FooterMenus)
  {
    <nav class="footer-menu">
      <h3 class="footer-menu-header">@menu.Title</h3>
      <ul class="footer-menu-links">
        @foreach (MenuItemViewModel item in menu.MenuItems)
        {
          <li class="footer-menu-item">
            <a class="footer-menu-item-link" href="@Html.LocalizeHref(@item.NavigateUrl)" title="@WebUtility.HtmlDecode(item.Tooltip)">@item.MenuText</a>
          </li>
        }
      </ul>
    </nav>
  }
</section>
